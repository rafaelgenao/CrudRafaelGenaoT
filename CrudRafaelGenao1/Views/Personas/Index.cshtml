@model IEnumerable<CrudRafaelGenao1.Models.Persona>

@{
    ViewData["Title"] = "Lista de Personas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de personas</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Personas">Agregar nueva persona</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.Nombre)</td>
                        <td>@Html.DisplayNameFor(m => m.Cargo)</td>
                        <td>@Html.DisplayNameFor(m => m.FechaDeNacimiento)</td>
                        <td>@Html.DisplayNameFor(m => m.Empresa)</td>
                        <td>@Html.DisplayNameFor(m => m.Sueldo)</td>
                        <td>Acciones</td>
                    </tr>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Nombre</td>
                            <td>@item.Cargo</td>
                            <td>@item.FechaDeNacimiento</td>
                            <td>@item.Empresa</td>
                            <td>@item.Sueldo</td>
                            <td>
                                <a asp-controller="Personas" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <a asp-controller="Personas" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>

                            </td>
                        </tr>
                    }


                </tbody>
                </thead>
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }

    </div>

</div>
